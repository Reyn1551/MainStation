<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.mainstation.app.ui.screens.auth.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_login_to_catalog"
            app:destination="@id/navigation_catalog"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim"/>
        <action
            android:id="@+id/action_login_to_admin"
            app:destination="@id/admin_fragment"
            app:popUpTo="@id/login_fragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_catalog"
        android:name="com.mainstation.app.ui.screens.catalog.CatalogFragment"
        android:label="Catalog"
        tools:layout="@layout/fragment_catalog">
        <action
            android:id="@+id/action_catalog_to_booking"
            app:destination="@id/booking_fragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_rooms"
        android:name="com.mainstation.app.ui.screens.rooms.RoomCatalogFragment"
        android:label="Rooms"
        tools:layout="@layout/fragment_rooms">
        <action
            android:id="@+id/action_rooms_to_booking"
            app:destination="@id/booking_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
    </fragment>

    <fragment
        android:id="@+id/booking_fragment"
        android:name="com.mainstation.app.ui.screens.booking.BookingFragment"
        android:label="Booking"
        tools:layout="@layout/fragment_booking" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.mainstation.app.ui.screens.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_locations"
            app:destination="@id/locations_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"/>
    </fragment>

    <fragment
        android:id="@+id/locations_fragment"
        android:name="com.mainstation.app.ui.screens.locations.LocationsFragment"
        android:label="Locations"
        tools:layout="@layout/fragment_locations" />

    <fragment
        android:id="@+id/admin_fragment"
        android:name="com.mainstation.app.ui.screens.admin.AdminFragment"
        android:label="Admin Dashboard"
        tools:layout="@layout/fragment_admin" />
</navigation>
