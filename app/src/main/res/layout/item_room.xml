<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/slate_800"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            
            <ImageView
                android:id="@+id/iv_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/slate_900" 
                android:scaleType="centerCrop"/>
                
            <TextView
                android:id="@+id/tv_room_type_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private"
                android:background="@drawable/bg_card"
                android:backgroundTint="@color/purple_500"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:padding="4dp"
                android:layout_margin="8dp"
                android:layout_gravity="top|start"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP Suite"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tv_room_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity: 4 people"
                android:textColor="@color/gray_300"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>
                
            <TextView
                 android:id="@+id/tv_facilities"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="AC, TV, Sofa"
                 android:textColor="@color/gray_300"
                 android:textSize="12sp"
                 android:ellipsize="end"
                 android:maxLines="1"
                 android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tv_room_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rp 50,000/hr"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_book_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Room"
                android:textColor="@color/white"
                android:background="@drawable/bg_button_gradient"
                android:textAllCaps="false"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
