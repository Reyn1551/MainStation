<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/slate_900"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvSelectedItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvSelectedItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 50.000/hr"
            android:textColor="@color/emerald_400"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Duration"
            android:textColor="@color/slate_300"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/sliderDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="1.0"
            android:valueTo="10.0"
            android:stepSize="1.0"
            app:thumbColor="@color/purple_500"
            app:trackColorActive="@color/purple_500"
            app:trackColorInactive="@color/slate_700"/>

        <TextView
            android:id="@+id/tvDurationDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 Hours"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date &amp; Time"
            android:textColor="@color/slate_300"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etDate"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field"
                android:hint="Select Date"
                android:textColor="@color/white"
                android:textColorHint="@color/slate_500"
                android:paddingStart="16dp"
                android:focusable="false"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etTime"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/bg_input_field"
                android:hint="Select Time"
                android:textColor="@color/white"
                android:textColorHint="@color/slate_500"
                android:paddingStart="16dp"
                android:focusable="false"/>
        </LinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Branch"
            android:textColor="@color/slate_300"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinnerBranch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_input_field"
            android:entries="@array/branch_locations" 
            android:spinnerMode="dropdown"/>
            <!-- Note: assuming branch_locations array exists or set in code. -->

        <Space
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1"/>

        <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="32dp"
             android:gravity="center_vertical">

             <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Total:"
                  android:textColor="@color/slate_300"
                  android:textSize="18sp"/>

             <TextView
                  android:id="@+id/tvTotalPrice"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="Rp 100.000"
                  android:textColor="@color/white"
                  android:textSize="24sp"
                  android:textStyle="bold"
                  android:gravity="end"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnConfirmBooking"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirm Booking"
            android:backgroundTint="@color/purple_600"
            android:layout_marginTop="24dp"
            app:cornerRadius="12dp"/>

    </LinearLayout>
</ScrollView>
